# Application
DEBUG=false

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001

# OpenAI / vLLM Configuration
# Option 1: Use vLLM with local model (recommended for development)
OPENAI_API_KEY=EMPTY
OPENAI_API_BASE=http://localhost:8000/v1
OPENAI_MODEL=Qwen/Qwen2.5-7B-Instruct

# Option 2: Use OpenAI API (uncomment to use)
# OPENAI_API_KEY=sk-...
# OPENAI_API_BASE=https://api.openai.com/v1
# OPENAI_MODEL=gpt-4-turbo-preview

# Model parameters
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=4096

# Stripe Configuration (optional)
STRIPE_API_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Google Cloud Configuration (optional)
GCLOUD_PROJECT_ID=your-project-id
GCLOUD_CREDENTIALS_PATH=/path/to/credentials.json

# Email Configuration (optional)
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Database
DATABASE_URL=sqlite:///./data/runs.db

# Security
SECRET_KEY=change-this-in-production-use-secrets-manager
VAULT_ENCRYPTION_KEY=

# Agent Configuration
MAX_AGENT_ITERATIONS=50
AGENT_TIMEOUT_SECONDS=300
ENABLE_HUMAN_IN_LOOP=true

# Browser Automation
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000
